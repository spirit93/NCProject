<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <managed-bean>
        <managed-bean-name>regCh</managed-bean-name>
        <managed-bean-class>ru.ncedu.ejb.RegCheckEjb</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>loginCh</managed-bean-name>
        <managed-bean-class>ru.ncedu.ejb.LoginCheckEjb</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>brendCh</managed-bean-name>
        <managed-bean-class>ru.ncedu.ejb.ProviderCheckEjb</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>addCategories</managed-bean-name>
        <managed-bean-class>ru.ncedu.ejb.AddCategories</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>addProduct</managed-bean-name>
        <managed-bean-class>ru.ncedu.ejb.AddProduct</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>marketManager</managed-bean-name>
        <managed-bean-class>ru.ncedu.bean.MarketManager</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/registration.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{regCh.regUser(user)}</from-action>
            <from-outcome>nullField</from-outcome>
            <to-view-id>/ErrorPages/NullField.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{regCh.regUser(user)}</from-action>
            <from-outcome>sameUserExist</from-outcome>
            <to-view-id>/ErrorPages/SameUserExist.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{regCh.regUser(user)}</from-action>
            <from-outcome>notSamePass</from-outcome>
            <to-view-id>/ErrorPages/PasswordEr.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{regCh.regUser(user)}</from-action>
            <from-outcome>wrongEmail</from-outcome>
            <to-view-id>/ErrorPages/EmailEr.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{regCh.regUser(user)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/clear_page.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/login_page.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{loginCh.loginCheck(user)}</from-action>
            <from-outcome>nullField</from-outcome>
            <to-view-id>/ErrorPages/NullField.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{loginCh.loginCheck(user)}</from-action>
            <from-outcome>userNotExist</from-outcome>
            <to-view-id>/ErrorPages/UserNotExist.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{loginCh.loginCheck(user)}</from-action>
            <from-outcome>wrongPassword</from-outcome>
            <to-view-id>/ErrorPages/PasswordEr.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{loginCh.loginCheck(user)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/clear_page.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
